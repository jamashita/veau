{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
